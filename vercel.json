{
  "functions": {
    "api/*.js": {
      "includeFiles": "api/*.js"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/agents/patient-care-agent/(.*)",
      "destination": "/$1"
    },
    {
      "source": "/agents/patient-care-agent",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/favicon.(ico|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/src/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
