{
  "functions": {
    "api/*.js": {
      "includeFiles": "api/*.js"
    }
  },

  "rewrites": [
    {
      "source": "/agents/patient-care-agent/((?!api/).*)",
      "destination": "/$1"
    },
    {
      "source": "/agents/patient-care-agent",
      "destination": "/index.html"
    },
    {
      "source": "/agents/patient-discharge-agent/(.*)",
      "destination": "https://patient-discharge-agent-nu.vercel.app/$1"
    },
    {
      "source": "/agents/clinical-trial-agent/(.*)",
      "destination": "https://clinical-trial-agent.onrender.com/$1"
    }
  ],
  "headers": [
    {
      "source": "/favicon.(ico|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/src/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
